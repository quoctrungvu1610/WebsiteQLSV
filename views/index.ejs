<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (my_student.length > 0) { %>
            <table class="table table-hovered" style="margin-top:0px">
                <thead class="thead-blue">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Họ và Tên</th>
                        <th scope="col">Email</th>
                        <th scope="col">Lớp</th>
                        <th scope="col">Số Điện Thoại</th>
                        <th scope="col">MSSV</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Chỉnh Sửa</th>
                    </tr>
                </thead>
                <tbody>
                    <% my_student.forEach((student, index) => { %>
                        <tr>
                            <th scope="row"><%= student.Id%></th>
                            <td><img src="/assets/img/<%= student.Avt %>" class="student-img" alt=""></td>
                            <td><%= student.Name %></td>
                            <td><%= student.Email %></td>
                            <td style="color:#00CCCC ;font-weight: bold;"><%= student.Class %></td>
                            <td><%= student.Phone %></td>
                            <td><%= student.MSSV %></td>
                            <td><%= student.DOB %></td>
                            <td>
                                <a href="/edit/<%= student.Id %>" target="_blank" rel="noopener" class="btn btn-sm editbtn" title = "Chỉnh Sửa Thông Tin Sinh Viên"><span class="material-icons">edit</span></a>
                                <a href="/delete/<%= student.Id %>" target="_blank" class="btn btn-sm delbtn" title ="Xóa Sinh Viên"><span class="material-icons">delete</span></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Hiện chưa có thông tin Sinh Viên.Ấn vào <a href="/add" >Đây</a> để thêm Sinh Viên.</p>
        <% } %>
    </div>
</div>
</body>
</html>